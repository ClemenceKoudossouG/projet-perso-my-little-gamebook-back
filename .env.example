# Server Configuration
PORT=3000
NODE_ENV=development  # Set to 'production' in the deployed environment

# API Configuration
API_DOCUMENTATION_ROUTE=/api-docs
LOCAL_URL=http://localhost:3000  # For local development
DEPLOYED_API_URL=https://your-deployed-api-url.com  # For production (replace with actual URL)

# PostgreSQL Database Configuration (Admin User)
PGHOST=localhost
PGPORT=5432
PGUSER=admin_gamebook
PGPASSWORD=your_admin_password_here
PGDATABASE=gamebook

# PostgreSQL Database Configuration (Superuser)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
